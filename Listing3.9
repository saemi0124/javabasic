import java.util.Scanner;

public class Listing3.9{
	public static void main (String[] args){
		Scanner input = new Scanner(System.in);
		System.out.println("Enter the first 9 digits of an ISBN as integer: ");
		int ISBN = input.nextInt();
		
		int n1 = ISBN / 100000000;
		int remainingDigits = ISBN % 100000000;
		int n2 = remainingDigits / 10000000;
		remainingDigits %= 10000000;
		int n3 = remainingDigits / 1000000;
		remainingDigits %= 1000000;
		int n4 = remainingDigits / 100000;
		remainingDigits %= 100000;
		int n5 = remainingDigits / 10000;
		remainingDigits %= 10000;
		int n6 = remainingDigits / 1000;
		remainingDigits %= 1000;
		int n7 = remainingDigits / 100;
		remainingDigits %= 100;
		int n8 = remainingDigits / 10;
		remainingDigits %= 10;
		int n9 = remainingDigits;
		int ISBN_10 = (n1 * 1 + n2 * 2 + n3 * 3 + n4 * 4 + n5 * 5 + n6 * 6 + n7 * 7 + n8 * 8 + n9 + 9) % 11;
		
		System.out.print("The ISBN-10 number is " + n1 + n2 + n3 + n4 + n5 + n6 + n7 + n8 + n9);
		if (ISBN_10 == 10)
			System.out.print("X");
		else
			System.out.print(ISBN_10);
	}
}
